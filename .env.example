# Environment Variables for FPL Recommender

# API Keys (if using paid services)
ODDS_API_KEY=your_odds_api_key_here
API_SPORTS_KEY=your_api_sports_key_here

# Database Configuration
DATABASE_URL=sqlite:///data/fpl_data.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/fpl_db

# FPL Settings
FPL_SEASON=2024-25
FPL_TEAM_ID=your_fpl_team_id_here

# Rate Limiting
FPL_API_REQUESTS_PER_MINUTE=60
ODDS_API_REQUESTS_PER_MINUTE=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fpl_recommender.log

# Cache Settings
CACHE_DIR=cache/
CACHE_TTL_HOURS=4

# Model Settings
MODEL_UPDATE_FREQUENCY_HOURS=24
BACKTEST_START_SEASON=2023-24

# Notification Settings (Optional)
EMAIL_NOTIFICATIONS=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@gmail.com
EMAIL_PASSWORD=your_app_password